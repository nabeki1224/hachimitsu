<% if !mitsu.goods.where(user_id: current_user.id).empty? %>
  <%= link_to "#{mitsu.goods.count}いいね", "#", class: "btn btn-primary" %>
  <%= link_to "イマイチ", mitsu_bads_path(mitsu), method: :post, remote: true, class: "btn btn-outline-danger" %>
<% elsif !mitsu.bads.where(user_id: current_user.id).empty? %>
  <%= link_to "#{mitsu.goods.count}いいね", mitsu_goods_path(mitsu), method: :post, remote: true, class: "btn btn-outline-primary" %>
  <%= link_to "イマイチ", "#", class: "btn btn-danger" %>
<% else %>
  <%= link_to "#{mitsu.goods.count}いいね", mitsu_goods_path(mitsu), method: :post, remote: true, class: "btn btn-outline-primary" %>
  <%= link_to "イマイチ", mitsu_bads_path(mitsu), method: :post, remote: true, class: "btn btn-outline-danger" %>
<% end %><br><br>
